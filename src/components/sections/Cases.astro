---
import { Image } from "astro:assets";
import Card from "../ui/Card.astro";
import Section from "./Section.astro";

const cards = [
  {
    index: 0,
    title:
      "Buat restoran lokal, kami bikin kampanye PPC yang narget banget, hasilnya pengunjung website naik 50% dan penjualan juga ikut naik 25%!",
    link: "https://google.com",
  },
  {
    index: 1,
    title:
      "Untuk perusahaan software B2B, kami susun strategi SEO yang bikin mereka nongol di halaman pertama Google buat kata kunci penting, dan jumlah pengunjung melonjak sampai 200%!",
    link: "https://google.com",
  },
  {
    index: 1,
    title:
      "Untuk jaringan toko retail nasional, kami rancang kampanye media sosial yang berhasil nambahin followers 25% dan penjualan online juga ikutan naik 20%. Mantap!",
    link: "https://google.com",
  },
];

import larrow from "../../assets/icon3.svg";
import SectionTitle from "../ui/SectionTitle.astro";
---

<Section id="cases">
  <SectionTitle
    sectionTitle="Studi Kasus"
    description="Jelajahi Studi Kasus Kami untuk melihat bagaimana kami membantu klien kami mencapai tujuan mereka."
  />
  <div class="flex flex-col lg:flex-row justify-between rounded-[45px] p-1">
    {
      cards.map((card) => (
        <Card>
          <div class="flex p-[60px] h-full bg-dark text-gray rounded-[45px] m-[1px]">
            <div class="flex flex-col gap-5">
              <p>{card.title}</p>
              <a href={card.link} class="flex items-center gap-[15px]">
                <span class="text-green">Lebih lanjut</span>
                <picture>
                  <Image src={larrow} alt="Arrow pointing up right" />
                </picture>
              </a>
            </div>
          </div>
        </Card>
      ))
    }
  </div>
</Section>
